{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "EC2 instance with functions",
	"Parameters": {
		"AMI": {
			"Description": "AMI to start virtual server",
			"Type": "String",
			"MaxLength": 12,
			"MinLength": 12
		},
		"KeyName": {
			"Description": "Key Pair name",
			"Type": "AWS::EC2::KeyPair::KeyName"
		},
		"VPC": {
			"Description": "VPC to launch virtual server in",
			"Type": "AWS::EC2::VPC::Id"
		},
		"Subnet": {
			"Description": "subnet to launch virtual server in",
			"Type": "AWS::EC2::Subnet::Id"
		},
		"URL": {
			"Description": "URL for load testing",
			"Type": "String",
			"Default": "http://widdix.net/"
		}
	},
	"Resources": {
		"SecurityGroup": {
			"Type": "AWS::EC2::SecurityGroup",
			"Properties": {
				"GroupDescription": "allow-ssh",
				"VpcId": {"Ref": "VPC"},
				"SecurityGroupIngress": [{
					"CidrIp": "0.0.0.0/0",
					"FromPort": 22,
					"IpProtocol": "tcp",
					"ToPort": 22
				}]
			}
		},
		"EC2Instance": {
			"Type": "AWS::EC2::Instance",
			"Properties": {
				"ImageId": {"Ref": "AMI"},
				"InstanceType": "t2.micro",
				"SubnetId": {"Ref": "Subnet"},
				"Tags": [
					{
						"Key": "Name",
						"Value": "learn-cloudformation-5-dependencies"
					}
				],
				"UserData": {"Fn::Base64": {"Fn::Join": ["", [
					"#!/bin/bash -ex\n",
					"yum install -y httpd-tools\n",
					"ab -n 1000 -c 4 ", {"Ref": "URL"}, "\n"
				]]}},
				"KeyName": // TODO reference KeyName 
				"SecurityGroupIds": [
					// TODO reference SecurityGroup 
				]
			}
		}
	},
	"Outputs": {
		"InstanceId": {
			"Value": {"Ref": "EC2Instance"},
			"Description": "ID of virtual server"
		},
		"PublicIPAddress": {
			"Value": {"Fn::GetAtt": ["EC2Instance", "PublicIp"]},
			"Description": "public IP address of virtual server"
		}
	}
}